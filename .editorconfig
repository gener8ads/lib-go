# http://editorconfig.org
root = true

[*]
indent_style = tab
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.{md, mdown, markdown}]
indent_size = 2
indent_style = spaces
trim_trailing_whitespace = false

[*.{yml, yaml, jsonnet, libsonnet}]
indent_size = 2
indent_style = spaces
